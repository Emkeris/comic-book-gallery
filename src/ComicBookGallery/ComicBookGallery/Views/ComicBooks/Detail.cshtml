@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
        <h2>Issue number: #@ViewBag.IssueNumber</h2>

        <br />

        <div>Description: @Html.Raw(@ViewBag.Description)</div>

        @if(ViewBag.Artists.Length > 0)
            {
                <h4>Astists: @ViewBag.Artists</h4>
                <ul>
                    @foreach(var artist in ViewBag.Artists)
                    {
                           <li>@artist</li>
                    }
                </ul>
            }
    </div>
</body>
</html>
